#version 450
layout(location = 0) out vec4 outColor;

layout(location = 0) in vec2 TexCoords;

layout(binding = 4) uniform UiObject
{
    mat4 model;
    vec4 color;
    vec2 slidingCrop;
};

layout(binding = 5) uniform sampler2D tex;

void main()
{
    vec4 sampled = texture(tex, TexCoords);
    outColor = color * sampled;
}